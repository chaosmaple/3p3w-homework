@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Lato);
@import url('icomoon.css')
@font-face
    font-family Proxima
    font-style normal
    src url(fonts/ProximaNova-Regular.otf)

highlight_text = #fff
text_color = rgb(113, 113, 113)
second_text_color = #aaa
border_color = #eeeeee
bg_color = #fafafa
button_color = #6cdcac

.container
    max-width 75em
    margin 0 auto

html,body
    text-rendering: optimizeLegibility;  
    -webkit-font-smoothing: antialiased;
    .divider
        height 1px
        width 100%
        background border_color
        margin 8em 0 5em
        
    
body
    font-size 100%
    text-align center
    font-family: Proxima,'Lato',sans-serif;
    .hero
        background url('../../images/hero.jpg') no-repeat center top
        background-size cover
        max-width 100%
        margin 0 auto
        padding-bottom 12em
        header
            img
                margin 1em 0 0 1em
                width 8em
                height 2em
                float left
            ul
                float right
                margin-top 1em
                li
                    color highlight_text
                    float left
                    margin 0 .5em
                    padding .5em 1em
                    border 1px solid transparent
                    border-radius: 2px
                    list-style-type none
                    cursor pointer
                    &:last-child
                        border 1px solid highlight_text
            clearfix()
        h1
            color highlight_text
            margin-top 3em
            font-size 4em
            padding 1em 0 0 0
        h2
            color highlight_text
            font-size 2em
            font-weight normal
        form
            margin-top 3em
            input
                border none
                box-sizing border-box
                &[type=text]
                    padding 1em
                    width 18em
                    border-radius 2px 0 0 2px
                    background rgba(255,255,255,.3)
                    color text_color
                &[type=button]
                    padding 1em
                    width 6em
                    border-radius 0 2px 2px 0
                    background-color button_color
                    color highlight_text

.numbers
    width 60%
    margin 0 auto
    ul
        position relative
        top -4em
        margin 0
        padding 0
        li
            float left
            width 25%
            list-style-type none
            box-sizing border-box
            border-top 1px solid border_color
            border-bottom 1px solid border_color
            border-left 1px solid border_color
            background bg_color
            &:last-child
                border-right 1px solid border_color
    clearfix()
    h2
        font-size 1.8em
        margin-bottom .1em
    h3
        font-weight normal
        margin-bottom 1.5em
            
.how_it_works
    text-align center
    clearfix()
    h2
        font-size 2em
        word-spacing .1em
        &:after
            content ''
            display block
            width 1.5em
            height 2px
            background second_text_color
            margin .2em auto 2em
    ul
        max-width 75em
        margin 0 auto
        padding 0
        li
            float left
            width 33.33%
            padding 0 1em
            box-sizing border-box
            list-style-type none
            position relative
            z-index 1
            &:not(:last-child):before
                content ''
                display block
                position absolute
                left 60%
                top 3em
                width 80%
                height 1px
                background second_text_color
            .number
                text-align center
                font-size 1.5em
                color text_color
                border 1px solid second_text_color
                background #fff
                z-index 10
                width 1em
                height 1em
                line-height 1em
                display block
                margin 1em auto 2em
                padding .4em
                border-radius 100%
            i
                font-size 3em
                &.icon-list2
                    color #8cd109
                &.icon-pencil
                    color #239ffa
                &.icon-users
                    color #ed10d3
            h3
                font-size 1.6em
                margin 1em 0 .5em
            p
                color second_text_color
                line-height 1.3em
                
.why_choose_us
    text-align center
    width 75em
    margin 0 auto
    h2
        font-size 2em
        word-spacing .1em
        &:after
            content ''
            display block
            width 1.5em
            height 2px
            background second_text_color
            margin .2em auto 2em
    .summary
        display inline-block
        vertical-align top
        box-sizing border-box
        width 49%
        margin-bottom 20px
        i,article
            display inline-block
            vertical-align top
        i
            width 20%
            font-size 1.5em
            &.icon-checkmark
                color #1cded6
            &.icon-price-tag
                color #519afd
            &.icon-loop2
                color #9ded2f
            &.icon-user
                color #37a4f4
            &.icon-clipboard
                color #f75681
            &.icon-happy
                color #71d020
        article
            width 80%
            text-align left
            h3
                margin 0
                font-size 1.3em
            p
                color second_text_color
                line-height 1.5em
            
        
    
                